# Server configuration
PORT=3000                         # Port number your server runs on

# Database configuration
DB_HOST=localhost                 # Database host (usually localhost)
DB_USER=your_db_username          # Your database username
DB_PASSWORD=your_db_password      # Your database password
DB_NAME=your_database_name        # Name of the database

# JWT configuration
JWT_SECRET=your_jwt_secret_key    # Secret key for JWT token generation

# Email configuration (used for password reset, etc.)
EMAIL_USER=your_email_address     # Email address used to send emails
EMAIL_PASS=your_email_password    # Email password or app-specific password
